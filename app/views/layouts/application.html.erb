<!DOCTYPE html>
<html>
<head>
  <title>UOIT Shouter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    
    
    
    
	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header">
				<%= link_to "UOIT Shouter", root_path, class: "navbar-brand" %>
			</div>
			<ul class="navbar-nav nav">
				
				<% if user_signed_in? %>
					<li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
				<% else %>	
					<li><%= link_to "Log In", new_user_session_path %></li>
					<li><%= link_to "Sign Up", new_user_registration_path %></li>
				<% end %>
			    
				
				
			</ul>
			<% if user_signed_in? %>
				<p><%= link_to "Make a Shout!!", new_message_path, class: "navbar-text navbar-link navbar-right" %></p>
			<% else %>
			   <small class="navbar-text navbar-link navbar-right">Sign in or Sign up to make a shout!!</small>
			<% end %>
		<%= form_tag(messages_path, :method => "get", id: "search-form") do %>
					<%= text_field_tag :search, params[:search], placeholder: "Search Shouts" %>
				     <%= submit_tag "Search", :name => nil %>
				     <% end %>	
		
		
		</div>
	</nav>

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<div class="container">
		<%= yield %>
	</div>

</body>
</html>
